<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApplicationToka</title>

    <partial name="admin/_Styles" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="with-welcome-text">

    <div class="container-scroller">

        @if (User.Identity.IsAuthenticated)
        {
            <partial name="admin/_topBar" />
        }

        <div class="container-fluid page-body-wrapper">

            @if (User.Identity.IsAuthenticated)
            {
                <partial name="admin/_sideBar" />
            }

            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>

                <partial name="_ModelCloseSession" />

                <partial name="admin/_footer" />

            </div>

        </div>

    </div>


    <partial name="admin/_Scripts" />
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
